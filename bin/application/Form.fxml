<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="699.0" prefWidth="599.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.FormController">
   <children>
      <VBox layoutX="92.0" layoutY="60.0" prefHeight="163.0" prefWidth="400.0">
         <children>
            <Label text="Step1：文書集合を形態素解析する">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="textField1" promptText="文書テキスト集合が保存されたフォルダを指定する" text="input_documents">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </TextField>
            <Button fx:id="button1" mnemonicParsing="false" onAction="#onButton1Action" text="OK">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Button>
            <Label fx:id="resultOfStep11" text="※初期状態で「input_documents」と入力するとサンプル文書で稼働します">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Label>
            <Label fx:id="resultOfStep1" text="※ファイルは「.txt、UTF-8、LF」に統一してください">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
      <VBox layoutX="100.0" layoutY="284.0" prefHeight="163.0" prefWidth="400.0">
         <children>
            <Label text="Step2：LDAでトピック分析を行う">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="textField2" promptText="Step1相当のテキストが保存されたフォルダのパスを記載してOKを押す" text="output_kuromoji">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </TextField>
            <Button fx:id="button2" mnemonicParsing="false" onAction="#onButton2Action" text="OK">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Button>
            <Label fx:id="resultOfStep2" text="※インプットファイルは「1ファイル1文書形式、単語を半角スペース区切り」にすること">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
   </children>
